            jQuery('#locationsselect1 .hida').css("display", "initial");
            jQuery('#locationsselect1 .multiSel').html("");


        });
        $('#allstatus').change(function () {



            $('input[name="optionsstatus[]"]').each(function () {

                if (valid4 == 0) {
                    this.checked = true;

                } else {
                    this.checked = false;
                }

            });

            if (valid4 == 0) {
