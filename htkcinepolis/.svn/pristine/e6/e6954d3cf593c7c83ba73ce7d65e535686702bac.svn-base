                var startdate = $("#start").val();
                var enddate = $("#end").val();
                var profile = $("#selectprofile").val();
                namereport = $("#getnamex").val();

                if (namereport != "" && namereport != null) {

                    if (startdate == "" || startdate == null) {
                        startdate = "01/01/1900";

                    }
                    if (enddate == "" || enddate == null) {
                        enddate = "01/01/3000";
                    }
