@using Newtonsoft.Json;
@using Newtonsoft.Json.Linq;
@model JArray

@Html.Hidden("TableName", ViewData["TableName"])
 <div class=" well-content no-search">
<table class="table table-striped table-bordered table-hover datatable" id="customFieldTable">
    <thead>
        <tr>
            <th></th>
            <th>Nombre</th>
            <th>Etiqueta</th>
            <th>Tipo de Campo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (JObject doc in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name=@doc["_id"].ToString() />
                </td>
                <td>@doc["name"]</td>
                <td>@doc["label"]</td>
                <td>@doc["type"]</td>
                <td>
                    <div class='btn-group'>
                        <a class='btn' onclick="myEditFunction('@doc["_id"].ToString()')">
                            <i class='icon-edit' data-original-title="Editar" rel="tooltip" data-placement="top"></i>
                        </a>
                        <a class='btn' onclick="myDeleteFunction('@doc["_id"].ToString()')">
                            <i class='icon-trash' data-original-title="Borrar" rel="tooltip" data-placement="top"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
     </div>
<script>

    jQuery("[rel=tooltip]").tooltip();

    try {

        jQuery(".datatable").dataTable({
            "sPaginationType": "full_numbers",
            "sDom": "<'tableHeader'<l><'clearfix'f>r>t<'tableFooter'<i><'clearfix'p>>",
            "iDisplayLength": 10,
            "aoColumnDefs": [{
                'bSortable': false,
                'aTargets': [0]
            }],
            "oLanguage": {
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sInfo": "Mostrando del _START_ al _END_ de _TOTAL_ registros",
                "sSearch": "Buscar",
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Ultimo",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"

                },
                "sEmptyTable": "Tabla Sin Datos"
            }
        });
        jQuery('.dataTables_length select').chosen();
    } catch (Exception) { console.log(); }
</script>