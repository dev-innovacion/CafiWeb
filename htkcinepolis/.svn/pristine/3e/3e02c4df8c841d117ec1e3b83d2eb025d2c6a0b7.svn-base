<script>
    //jQuery(".collapse_well").collapse();
    //jQuery('.carousel').carousel();

    // Selecting the graphType
    jQuery("select[name=graphType]").on("change", function () {
        var graph = this.value;
        var images = jQuery(".graphImages");
        switch (graph) {
            case "combochart":
                images.css("left", "0px"); break;
            case "linechart":
                images.css("left", "-250px"); break;
            case "piechart":
                images.css("left", "-500px"); break;
        }
    });

    //Selecting the Visualization
    jQuery("select[name=visualization]").on("change", function () {
        var visualization = this.value;
        if (visualization == "graph") {
            jQuery(".preview .graphImages").removeClass("hide");
            jQuery(".preview .summary").addClass("hide");
            jQuery("select[name=graphType]").removeClass("hide");
            jQuery("select[name=icon]").addClass("hide");

            jQuery("#watchLast").show();
            jQuery("#icon").hide();
        }
        else if (visualization == "summary") {
            jQuery(".preview .graphImages").addClass("hide");
            jQuery(".preview .summary").removeClass("hide");
            jQuery("select[name=graphType]").addClass("hide");
            jQuery("select[name=icon]").removeClass("hide");

            jQuery("#watchLast").hide();
            jQuery("#icon").show();
        }
    });
</script>

<script src="/Content/Scripts/library/iconpicker/js/iconset/iconset-fontawesome-4.0.0.min.js"></script>
<script src="/Content/Scripts/library/iconpicker/js/bootstrap-iconpicker.js"></script>
<script>

    jQuery("#icon").on("change", function (e) {
        jQuery(".preview .summary i").attr("class", "");
        jQuery(".preview .summary i").attr("class", "fa " + e.icon);
    });

    jQuery("#icon").iconpicker()
        .iconpicker('setIconset', {
            iconClass: 'fa',
            iconClassFix: 'fa-',
            icons: [
                'tag',
                'home',
                'user',
                'random',
                'bar-chart',
                'warning'
            ]
        })
        .iconpicker('setSearch', false);
</script>
