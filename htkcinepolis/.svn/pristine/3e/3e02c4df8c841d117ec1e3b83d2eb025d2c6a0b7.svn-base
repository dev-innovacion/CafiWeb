<link href="/Content/Scripts/library/iconpicker/css/bootstrap-iconpicker.css" rel="stylesheet" />

<div class="row-fluid">
    <div class="span12" id="moduleTitle">
        <i class="icon-tag"></i>
        <span>Activos</span>
    </div>
    <div class="span6">
        <div class="span12">
            <div class="span5">
                <span>Titulo </span>
            </div>
            <div class="span7">
                <input type="text" name="title" />
            </div>
        </div>
        <div class="no-notifications">

            <div class="span12">
                <div class="span5">
                    <span>Visualización</span>
                </div>
                <div class="span7">
                    <select name="visualization">
                        <option value="graph">Gráfica</option>
                        <option value="summary">Resumen</option>
                    </select>
                </div>
            </div>
            <div class="span12" id="watchLast">
                <div class="span5">
                    <i class="icon-time"></i>
                    <span>Ver últimos</span>
                </div>
                <div class="span7">
                    <input name="lastTime" type="number" value="5" min="1">
                    <select name="lastType">
                        <option value="minutes">minutos</option>
                        <option value="hours">horas</option>
                        <option value="days">días</option>
                    </select>
                </div>
            </div>
            <div class="span12">
                <div class="span5">
                    <i class="icon-refresh"></i>
                    <span>Actualizar c/</span>
                </div>
                <div class="span7">
                    <input name="updateTime" type="number" value="5" min="1">
                    <select name="updateType">
                        <option value="seconds">segundos</option>
                        <option value="minutes">minutos</option>
                        <option value="hours">horas</option>
                    </select>
                </div>
            </div>

        </div>

    </div>
    <!--Preview Section-->
    <div class="span6 no-notifications">
        <div class="preview">
            <div class="summary hide">
                <i class="fa fa-home"></i>
                <span>250</span>
            </div>
            <div class="graphImages">
                <img src="/Content/Scripts/library/gridster/images/bars.png" />
                <img src="/Content/Scripts/library/gridster/images/lines.png" />
                <img src="/Content/Scripts/library/gridster/images/pie.png" />
            </div>
            <select name="graphType">
                <option value="combochart">Barras</option>
                <option value="linechart">Lineas</option>
                <option value="piechart">Pastel</option>
            </select>
            <button name="iconPicker" id="icon" class="btn btn-default" role="iconpicker"></button>
        </div>
    </div>
</div>
