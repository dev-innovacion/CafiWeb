/* Login pages */
.dark-login
{
    background: #1f1f1f;
}

.blue-login
{
    background: #0072c6;
}

.light-login .login-container
{
    border: 1px solid #5c5c5c;
}

.login-container
{
    width: 290px;
    position: fixed;
    top: 50%;
    left: 50%;
    margin-left: -175px;
    padding: 15px 30px;
    background: #fff;
    margin-top: -200px;
}

    .login-container.opacity
    {
        background: rgba(255, 255, 255, 0.35);
    }

.login-header
{
    padding: 10px 0;
    margin-bottom: 5px;
}

    .login-header.blue
    {
        background: #0072c6;
        text-align: center;
        color: #fff;
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .login-header.bordered
    {
        text-align: left;
        border-left: 4px solid #e47a23;
        padding-left: 15px;
        margin-top: 10px;
        margin-bottom: 15px;
    }

.login-field
{
    margin-bottom: 10px;
    position: relative;
}

    .login-field input
    {
        width: 100%;
    }

    .login-field i
    {
        font-size: 14px;
        position: absolute;
        right: 10px;
        top: 34px;
        color: #7b7b7b;
    }

.login-button
{
    margin-top: 20px;
    margin-bottom: 10px;
    position: relative;
}

    .login-button .btn i
    {
        position: relative;
        top: 0;
    }

    .login-button .btn-block i
    {
        position: absolute;
        right: 10px;
        top: 9px;
    }

.forgot-password
{
    margin: 15px 0 5px;
}

.passCenter
{
    text-align: center;
}

#gradiente
{
    background: -webkit-linear-gradient(left top, #003773, #01509b, #003773); /* For Safari 5.1 to 6.0 */
    background: -o-linear-gradient(bottom right, #003773, #01509b, #003773); /* For Opera 11.1 to 12.0 */
    background: -moz-linear-gradient(bottom right, #003773, #01509b, #003773); /* For Firefox 3.6 to 15 */
    background: linear-gradient(to bottom right, #003773, #01509b, #003773); /* Standard syntax (must be last) */
}

a.pass
{
    color: #ffffff;
}

img.login-htkLogo
{
    height: 45px;
}

.powered-by
{
    margin-right: -18px;
}

.Login-text
{
    text-align: center;
    font-family: impact;
    font-size: 22px;
    font-weight: lighter;
    padding-top: 15px;
    padding-bottom: 10px;
}

.btn.Login
{
    background: rgb(253, 184, 39);
    color: #fff;
}


    .btn.Login:hover
    {
        background: rgb(243, 174, 30);
        color: #fff;
    }
