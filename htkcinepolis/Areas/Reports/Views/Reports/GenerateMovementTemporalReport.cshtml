            }
            if (value == "goexcel") {
                jQuery.ajax({

                    url: "/Reports/Reports/ExportDataSet",
                    data: { result: jsonresult, namefilter: namefilter, numtot: numtotal, datacols: jsoncols, datesarray: jsondates, namereports: namereport, typefilters: typefilter, graph: imgjpeg },
