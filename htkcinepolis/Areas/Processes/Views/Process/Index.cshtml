        method: RivkaTree.METHODS.AJAX,
        url: "/Processes/Process/getNodeContent",
        idKey: "_id",
        nameKey: "name",
        onNodeSelectAction: function () {
            var id = jQuery(this).closest("li").data("idcategory");
        }
