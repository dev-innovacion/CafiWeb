                                '<div class="span10">'+
                                    '<p>Selecciona una Ubicación</p>'+
                                    '<ul>'+
                                    '</ul>'+
                                '</div>'+
                            '<div class="span2">'+
                                '<div class="hardware_tools">'+
                                    '<button class="btn btn-mini blue" onclick="hardware_modal.newLocation(this)" id="addNewLocation" title="Agregar Ubicación" rel="tooltip" data-placement="top">'+
