    function loadProcessTable() {
        jQuery.ajax({
            url: "/Processes/Process/getProcessesTable",
            type: "POST",
            success: function (data) {
                jQuery("#processesTable").html(data);            
            }
        });
    }

    function clearForm() {
        jQuery("#processForm input:not(.btn) , #processForm textarea").each(function () {
