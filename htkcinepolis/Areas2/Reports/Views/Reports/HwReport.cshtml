                                        var jsondatafilter = data["filter"];
                                        var startdate = data["startdate"];
                                        var enddate = data["enddate"];
                                        var jsondata = data["cols"];

                                        jQuery.ajax({

                                            url: "/Reports/Reports/GenerateHwReport",
